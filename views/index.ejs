<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Home Page</title>

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <link rel="stylesheet" href="/styles/rating.css" type="text/css" />

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>

    <script src="https://use.fontawesome.com/48a35a65fe.js"></script>
  </head>

  <body>
  <%- include("partials/_insertResource"); %>
  <%- include("partials/_updateResource"); %>
  <%- include("partials/_listOfResources"); %>

    <h1>Add category</h1>
    <form action="/api/category" method="POST">
      <input type="text" name="catname">
      <input type="submit" value="submit">
      </form>

    <h1>Add items to category</h1>

      <form action="/api/add_res" method="POST">
        <h2>Choose category</h2>
        <select name="cat_id">
          <option></option>
        </select>
        <input type="hidden" name="reso_id" value="1">
        <input type="submit" value="Add">
      </form>

    <div id="search_results">
      <h1>Search Resources</h1>
      <form id="search" method="GET" action="/api/search">
        <input id="query" type="text" name="query">
        <input type="submit" value="Search">
      </form>
    </div>

    <h1>Add likes</h1>
    <form action="/api/like" method="POST">
      <button name="like" type="submit" value="1">
        <i class="fa fa-heart" aria-hidden="true"></i>
      </button>
    </form>

    <h1>Add comments</h1>
    <button name="show_comment_field">
        <i class="fa fa-comment" aria-hidden="true"></i>
    </button>
    <form id="add_comment" action="/api/comment" method="POST">
        <input name="comment" type="textarea" value="" placeholder="Comments go here">
        <input type="submit" value="Submit">
    </form>


    <h1>Add star rating</h1>
    <form class="star_rating" method="POST" action="/api/rating">
      <button name="star" value="5">☆</button>
      <button name="star" value="4">☆</button>
      <button name="star" value="3">☆</button>
      <button name="star" value="2">☆</button>
      <button name="star" value="1">☆</button>
    </form>


  </body>
</html>
