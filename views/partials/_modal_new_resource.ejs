
<div class="modal fade" id="new-resource-modal" tabindex="-1" role="dialog" aria-labelledby="resourceModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="resourceModalLabel">New Resource</h4>

      </div>
      <div class="modal-body">

        <form action="/api/resources" method="POST">

          <div class="form-group">
            <label for="title" class="control-label">Title:</label>
            <input class="form-control" id="title" name="title"></input>

            <label for="url" class="control-label">URL:</label>
            <input class="form-control" id="url" name="url"></input>

            <label for="description" class="control-label">Description:</label>
            <textarea class="form-control" id="description" name="description"></textarea>

            <input type="hidden" name="createdBy" value="<%= user.id %>">

            <button class="btn" name="btnAddResource" value="Submit">Add Resource</button>

          </div>
        </form>
      </div>

    </div>
  </div>
</div>
